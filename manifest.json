{
  "manifest_version": 3,
  "name": "CrossQuery",
  "version": "1.0",
  "description": "Enhanced Google search experience with summaries from reddit and other websites",
  "permissions": [
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://www.google.com/",
    "https://google.com/",
    "http://localhost/*",
    "https://searchplusplus-server-production.up.railway.app/",
    "https://crossquery.invertedpassion.com/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.google.com/search?*",
      "https://google.com/search?*"],
      "js": ["content.js"]
    }
  ], 
  "options_page": "settings.html",
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "icon_48.png",
    "128": "icon_128.png"
  }
}